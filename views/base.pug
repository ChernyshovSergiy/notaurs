                //    span Sergiy
                button.nav__el Logo in
                button.nav__el.nav__el--cta Sing up

        // CONTENT
        section.overview
            h1= tour

        // FOOTER
        footer.footer
            .footer__logo
                img(src='/images/logo-green.png' alt='Natour logo')
            ul.footer__nav
                li: a(href='#') About us
                li: a(href='#') Download apps
                li: a(href='#') Become a guide
                li: a(href='#') Careers
                li: a(href='#') Contact
